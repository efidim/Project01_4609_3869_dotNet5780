<Window x:Class="PLWPF.HostingUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostingUnitWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource baseStyle}"></Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="49.6"/>
        </Grid.RowDefinitions>

        <Button x:Name="addUnitButton" Content="הוסף יחידת אירוח"  
        Margin="40,40,39.6,40"  Grid.Row="0" Click="addUnitButton_Click"/>

        <Button x:Name="existedUnitButton" Content="יחידה קיימת"  
        Margin="40,40,39.6,41.4" Grid.Row="1" Click="existedUnitButton_Click"/>

        <Button x:Name="backButton" Content="חזרה"  
        Margin="334,9.6,333.6,0" Grid.Row="2" Height="30" VerticalAlignment="Top" FontSize="18" Click="backButton_Click"/>
    </Grid>
</Window>
