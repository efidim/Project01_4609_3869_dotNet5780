<Window x:Class="PLWPF.Order.UpdateOrderWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Order"
        mc:Ignorable="d"
        Title="UpdateOrderWindow2" Height="450" Width="800">
    <Grid>
        <Label Content=":מספר הזמנה" FontSize="20" HorizontalAlignment="Left" Margin="415,58,0,0" VerticalAlignment="Top" Width="123"/>

        <Label Content="{Binding OrderKey}" FontSize="20" HorizontalAlignment="Left" Margin="231,58,0,0" VerticalAlignment="Top" Width="132" Height="37"/>


        <Label Content="סטטוס" HorizontalAlignment="Left" Height="29" Margin="371,118,0,0" VerticalAlignment="Top" Width="52"/>
        <TextBox x:Name="Status" HorizontalAlignment="Left" Height="23" Margin="327,162,0,0" TextWrapping="Wrap" Text="{Binding Status}" VerticalAlignment="Top" Width="120"/>
        <Button Content="עדכן" HorizontalAlignment="Left" Height="32" Margin="309,337,0,0" VerticalAlignment="Top" Width="166" Click="Button_Click"/>
        <Button Content="חזרה" HorizontalAlignment="Left" Margin="356,387,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Label Content="שינוי סטטוס" HorizontalAlignment="Left" Margin="459,240,0,0" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="ChangeS" SelectedItem="{Binding OrderStatus}" HorizontalAlignment="Left" Margin="326,240,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
